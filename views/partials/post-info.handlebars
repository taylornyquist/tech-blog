<article class="post">
      <div class="post-title">
        <h3>{{title}}</h3>
    </div>
    <div class="post-text">
        <p>{{post_text}}</p>
    </div>
    <div class="meta">
       <span class="created">
            Created by {{user.username}} on {{format_date created_at}}
       </span>
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>